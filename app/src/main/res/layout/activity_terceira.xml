<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TerceiraActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="300dp"
        android:layout_height="192dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bulgaria" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="293dp"
        android:layout_height="35dp"
        android:layout_marginTop="8dp"
        android:text="Que país é este?"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <RadioGroup
        android:id="@+id/rgBulgaria"
        android:layout_width="288dp"
        android:layout_height="136dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6">

        <RadioButton
            android:id="@+id/rdbBrasil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Brasil"
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/rdbItalia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Itália"
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/rdbMexico"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="México"
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/rdbBulgaria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bulgaria"
            android:textSize="18sp" />
    </RadioGroup>

    <Button
        android:id="@+id/btnResponderDois"
        android:layout_width="278dp"
        android:layout_height="37dp"
        android:text="Responder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rgBulgaria" />

    <Button
        android:id="@+id/btnAvancarDois"
        android:layout_width="278dp"
        android:layout_height="37dp"
        android:text="Avancar"
        android:onClick="startQuartaActivity"
        app:layout_constraintEnd_toEndOf="@+id/btnResponderDois"
        app:layout_constraintStart_toStartOf="@+id/btnResponderDois"
        app:layout_constraintTop_toBottomOf="@+id/btnResponderDois" />
</androidx.constraintlayout.widget.ConstraintLayout>