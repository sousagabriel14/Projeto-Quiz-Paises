<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuintaActivity">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="300dp"
        android:layout_height="192dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/china" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="272dp"
        android:layout_height="45dp"
        android:layout_marginTop="8dp"
        android:text="Que país é este?"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.413"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4" />

    <RadioGroup
        android:id="@+id/rgChina"
        android:layout_width="287dp"
        android:layout_height="142dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.443"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8">

        <RadioButton
            android:id="@+id/rdbCoreia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Coreia do Sul"
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/rdbChina"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="China"
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/rdbItalia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Itália"
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/rdbCuba"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cuba"
            android:textSize="18sp" />
    </RadioGroup>

    <Button
        android:id="@+id/btnResponderQuatro"
        android:layout_width="278dp"
        android:layout_height="37dp"
        android:text="Responder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.442"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rgChina" />

    <Button
        android:id="@+id/btnAvancarQuatro"
        android:layout_width="278dp"
        android:layout_height="37dp"
        android:onClick="startSextaActivity"
        android:text="Avançar"
        app:layout_constraintEnd_toEndOf="@+id/btnResponderQuatro"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btnResponderQuatro"
        app:layout_constraintTop_toBottomOf="@+id/btnResponderQuatro" />

</androidx.constraintlayout.widget.ConstraintLayout>