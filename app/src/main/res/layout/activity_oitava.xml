<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OitavaActivity">

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="300dp"
        android:layout_height="192dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/guatemala" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="290dp"
        android:layout_height="43dp"
        android:layout_marginTop="12dp"
        android:text="Que país é este?"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView7" />

    <RadioGroup
        android:id="@+id/rgGuatemala"
        android:layout_width="283dp"
        android:layout_height="143dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.401"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView11">

        <RadioButton
            android:id="@+id/rdbGrecia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Grécia"
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/rdbHungria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hungria"
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/rdbGuatemala"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guatemala"
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/rdbEua"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Estados Unidos"
            android:textSize="18sp" />
    </RadioGroup>

    <Button
        android:id="@+id/btnResponderSete"
        android:layout_width="278dp"
        android:layout_height="37dp"
        android:text="Responder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.389"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rgGuatemala" />

    <Button
        android:id="@+id/btnAvancarSete"
        android:layout_width="278dp"
        android:layout_height="37dp"
        android:onClick="startNonaActivity"
        android:text="Avancar"
        app:layout_constraintEnd_toEndOf="@+id/btnResponderSete"
        app:layout_constraintStart_toStartOf="@+id/btnResponderSete"
        app:layout_constraintTop_toBottomOf="@+id/btnResponderSete" />
</androidx.constraintlayout.widget.ConstraintLayout>