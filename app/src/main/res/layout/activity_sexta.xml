<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SextaActivity">

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="300dp"
        android:layout_height="192dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/coreia_sul" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="291dp"
        android:layout_height="42dp"
        android:layout_marginTop="8dp"
        android:text="Que país é este?"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.458"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView5" />

    <RadioGroup
        android:id="@+id/rgCoreia"
        android:layout_width="280dp"
        android:layout_height="140dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.426"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView9">

        <RadioButton
            android:id="@+id/rdbCoreia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Coreia do Sul"
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/rdbChina"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="China"
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/rdbGuatemala"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guatemala"
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/rdbHungria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hungria"
            android:textSize="18sp" />
    </RadioGroup>

    <Button
        android:id="@+id/btnResponderCinco"
        android:layout_width="278dp"
        android:layout_height="37dp"
        android:layout_marginTop="4dp"
        android:text="Responder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.427"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rgCoreia" />

    <Button
        android:id="@+id/btnAvancarCinco"
        android:layout_width="278dp"
        android:layout_height="37dp"
        android:text="Avançar"
        android:onClick="startSetimaActivity"
        app:layout_constraintEnd_toEndOf="@+id/btnResponderCinco"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/btnResponderCinco"
        app:layout_constraintTop_toBottomOf="@+id/btnResponderCinco" />
</androidx.constraintlayout.widget.ConstraintLayout>