<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuartaActivity">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="300dp"
        android:layout_height="192dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/canada" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="286dp"
        android:layout_height="46dp"
        android:layout_marginTop="8dp"
        android:text="Que país é este?"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <RadioGroup
        android:id="@+id/rgCanada"
        android:layout_width="281dp"
        android:layout_height="139dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4">

        <RadioButton
            android:id="@+id/rdbCoreia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Coreia do Sul"
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/rdbChina"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="China"
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/rdbCanada"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Canadá"
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/rdbEua"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Estados Unidos"
            android:textSize="18sp" />
    </RadioGroup>

    <Button
        android:id="@+id/btnAvancarTres"
        android:layout_width="278dp"
        android:layout_height="37dp"
        android:onClick="startQuintaActivity"
        android:text="Avançar"
        app:layout_constraintEnd_toEndOf="@+id/btnResponderTres"
        app:layout_constraintHorizontal_bias="0.484"
        app:layout_constraintStart_toStartOf="@+id/btnResponderTres"
        app:layout_constraintTop_toBottomOf="@+id/btnResponderTres" />

    <Button
        android:id="@+id/btnResponderTres"
        android:layout_width="278dp"
        android:layout_height="37dp"
        android:text="Responder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rgCanada" />
</androidx.constraintlayout.widget.ConstraintLayout>