<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SegundaActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="300dp"
        android:layout_height="192dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/brasil" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="281dp"
        android:layout_height="35dp"
        android:text="Que país é este? "
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.415"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <RadioGroup
        android:id="@+id/rgBrasil"
        android:layout_width="280dp"
        android:layout_height="134dp"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.406"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5">

        <RadioButton
            android:id="@+id/rdbEua"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Estados Unidos"
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/rdbCuba"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cuba"
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/rdbBrasil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Brasil"
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/rdbCanada"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Canadá"
            android:textSize="18sp" />
    </RadioGroup>

    <Button
        android:id="@+id/btnResponderUm"
        android:layout_width="278dp"
        android:layout_height="37dp"
        android:text="Responder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.419"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rgBrasil" />

    <Button
        android:id="@+id/btnAvancarUm"
        android:layout_width="278dp"
        android:layout_height="37dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:onClick="startTerceiraActivity"
        android:text="Avançar"
        app:layout_constraintEnd_toEndOf="@+id/btnResponderUm"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/btnResponderUm"
        app:layout_constraintTop_toBottomOf="@+id/btnResponderUm" />
</androidx.constraintlayout.widget.ConstraintLayout>