<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NonaActivity">

    <Button
        android:id="@+id/btnAvancarOito"
        android:layout_width="278dp"
        android:layout_height="37dp"
        android:onClick="startDecimaActivity"
        android:text="Avancar"
        app:layout_constraintEnd_toEndOf="@+id/btnResponderOito"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btnResponderOito"
        app:layout_constraintTop_toBottomOf="@+id/btnResponderOito" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="300dp"
        android:layout_height="192dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/hungria" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="290dp"
        android:layout_height="41dp"
        android:layout_marginTop="8dp"
        android:text="Que país é este?"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView8" />

    <RadioGroup
        android:id="@+id/rgHungria"
        android:layout_width="283dp"
        android:layout_height="143dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.468"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView12">

        <RadioButton
            android:id="@+id/rdbMexico"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mexico"
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/rdbGuatemala"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guatemala"
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/rdbHungria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hungria"
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/rdbItalia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Itália"
            android:textSize="18sp" />
    </RadioGroup>

    <Button
        android:id="@+id/btnResponderOito"
        android:layout_width="278dp"
        android:layout_height="37dp"
        android:text="Responder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.458"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rgHungria" />
</androidx.constraintlayout.widget.ConstraintLayout>