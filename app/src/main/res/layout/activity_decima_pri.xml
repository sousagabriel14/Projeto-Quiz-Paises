<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DecimaPriActivity">

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="300dp"
        android:layout_height="192dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.41"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/usa" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="291dp"
        android:layout_height="43dp"
        android:text="Que país é este?"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.458"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView10" />

    <RadioGroup
        android:id="@+id/rgEua"
        android:layout_width="280dp"
        android:layout_height="142dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.419"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7">

        <RadioButton
            android:id="@+id/rdbCuba"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cuba"
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/rdbRussia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Russia"
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/rdbEua"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Estados Unidos"
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/rdbCoreia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Coreia"
            android:textSize="18sp" />
    </RadioGroup>

    <Button
        android:id="@+id/btnResponderDez"
        android:layout_width="278dp"
        android:layout_height="37dp"
        android:text="Responder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.419"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rgEua" />

    <Button
        android:id="@+id/btnAvancarDez"
        android:layout_width="278dp"
        android:layout_height="37dp"
        android:onClick="startRankingActivity"
        android:text="Avançar"
        app:layout_constraintEnd_toEndOf="@+id/btnResponderDez"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btnResponderDez"
        app:layout_constraintTop_toBottomOf="@+id/btnResponderDez" />
</androidx.constraintlayout.widget.ConstraintLayout>